@model ConexiuniNonProfit.Models.Actiuni

@{
    ViewBag.Title = "Edit Actiuni";
}

<h2>Edit Actiuni</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ActiuniId" />
