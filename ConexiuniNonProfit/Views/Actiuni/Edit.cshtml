    <div class="form-group">
        <label asp-for="ActiuniAbbreviation"></label>
        <input asp-for="ActiuniAbbreviation" class="form-control" />
        <span asp-validation-for="ActiuniAbbreviation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActiuniDescription"></label>
        <input asp-for="ActiuniDescription" class="form-control" />
        <span asp-validation-for="ActiuniDescription" class="text-danger"></span>
    </div>
