@model ConexiuniNonProfit.Models.Actiuni

@{
    ViewBag.Title = "New Actiuni";
}

<h2>New Actiuni</h2>

<form asp-action="New" method="post">
    <div class="form-group">
        <label asp-for="ActiuniName"></label>
        <input asp-for="ActiuniName" class="form-control" />
        <span asp-validation-for="ActiuniName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActiuniAbbreviation"></label>
        <input asp-for="ActiuniAbbreviation" class="form-control" />
        <span asp-validation-for="ActiuniAbbreviation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActiuniDescription"></label>
        <input asp-for="ActiuniDescription" class="form-control" />
        <span asp-validation-for="ActiuniDescription" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
