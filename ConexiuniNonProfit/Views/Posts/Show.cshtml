@model ConexiuniNonProfit.Models.Post
@{
    ViewBag.Title = "Afisare postare";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ConexiuniNonProfit.Data.ApplicationDbContext _context
@{
    var currentUserId = UserManager.GetUserId(User);
    var userProfile = _context.Profiles.FirstOrDefault(p => p.UserId == currentUserId);
}

<style>
    .btn-pink {
        background-color: deepskyblue;
        border-color: azure;
        color: black;
    }

    .post-container {
        max-width: 800px;
        margin: 2rem auto;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        overflow: hidden;
    }

    .post-header {
        display: flex;
        align-items: center;
        padding: 16px;
        border-bottom: 1px solid #e6e6e6;
    }

        .post-header img {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            margin-right: 16px;
        }

    .post-content {
        padding: 16px;
        text-align: center;
    }

    .post-image {
        width: 100%;
        height: auto;
    }

    .comment-section {
        padding: 20px;
        background: rgba(248, 249, 250, 0.9);
        border-radius: 15px;
        margin: 15px;
    }

    .comment {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
        background: white;
        border-radius: 15px;
        padding: 15px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        transition: transform 0.2s;
    }

        .comment:hover {
            transform: translateX(5px);
        }

        .comment img {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            border: 3px solid #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

    .comment-body {
        flex: 1;
    }

    .comment-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .comment-author {
        font-weight: 600;
        color: #2c3e50;
    }

    .comment-date {
        font-size: 0.85rem;
        color: #95a5a6;
    }

    .comment-content {
        color: #34495e;
        line-height: 1.4;
    }


    .comment-form {
        background: white;
        padding: 20px;
        border-radius: 15px;
        margin: 15px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }

    .comment-input {
        width: 100%;
        padding: 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        resize: none;
        margin-bottom: 15px;
        transition: border-color 0.3s ease;
    }

        .comment-input:focus {
            outline: none;
            border-color: #3498db;
        }

    .btn-comment {
        background: linear-gradient(45deg, #3498db, #2980b9);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-comment:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
        }
    .icon-bar {
        display: flex;
        justify-content: space-between;
        padding: 0 16px;
    }

    .icon {
        cursor: pointer;
    }

    .dropdown {
        position: relative;
        display: inline-block;
        margin-left: auto;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: white;
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #f1f1f1;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .participate-section {
        padding: 20px;
        text-align: center;
        border-top: 1px solid rgba(0,0,0,0.1);
    }

    .btn-participate {
        background: linear-gradient(45deg, #2ecc71, #27ae60);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(46, 204, 113, 0.3);
    }

        .btn-participate:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(46, 204, 113, 0.4);
        }

    .btn-participated {
        background: linear-gradient(45deg, #95a5a6, #7f8c8d);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1.1rem;
        opacity: 0.9;
    }
    body {
        background: url('/images/Poza.png') no-repeat center center fixed;
        background-size: cover;

        font-family: Arial, sans-serif;
    }

    #background-video {
        display: none; /* Ascunde complet videoclipul pe această pagină */
    }
</style>

<div class="post-container">
    <div class="post-header">
        @if (Model.User.Profile.ProfileImage != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.User.Profile.ProfileImage)" alt="Profile Picture" />
        }
        else
        {
            <img src="/images/default-profile.png" alt="Profile Picture" />
        }
        <div>
            <strong>@Model.User.Profile.ProfileName</strong>
            <div><small>@ViewBag.StateName</small></div>
        </div>

        <div class="dropdown">
            <span class="icon">&#8942;</span>
            <div class="dropdown-content">
                <a href="/Posts/Edit/@Model.PostId">Editează postare</a>
                <form method="post" action="/Posts/Delete/@Model.PostId" style="display:inline;">
                    <button type="submit" class="btn btn-link">Șterge postare</button>
                </form>
            </div>
        </div>
    </div>

    <div class="post-content">
        @if (Model.Image != null && Model.Image.Length > 0)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Post Image" class="post-image" />
        }
        <p>@Model.PostContent</p>
    </div>

    <div class="comment-section">
        @foreach (var comm in Model.Comments)
        {
            <div class="comment">
                @if (comm.User?.Profile?.ProfileImage != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(comm.User.Profile.ProfileImage)" alt="Profile Picture" />
                }
                else
                {
                    <img src="/images/default-profile.png" alt="Profile Picture" />
                }
                <div class="comment-body">
                    <span class="icon">💬</span>
                    <strong>@comm.User?.Profile?.ProfileName</strong>
                    <p>@comm.CommentContent</p>
                    <small class="comment-date">@comm.CommentDate</small>
                    @if (comm.UserId == ViewBag.UserCurent || ViewBag.EsteAdmin)
                    {
                        <div class="d-flex justify-content-end mt-1">
                            <a class="btn btn-pink btn-sm me-1" href="/Comments/Edit/@comm.CommentId"><i class="bi bi-pencil-square"></i></a>
                            <form method="post" action="/Comments/Delete/@comm.CommentId">
                                <button class="btn btn-pink btn-sm" type="submit"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    @if (User.Identity.IsAuthenticated && userProfile?.ProfileCategory == ProfileType.Voluntar)
    {
        <div class="participate-section">
            @{
                var userId = UserManager.GetUserId(User);
                var isParticipating = _context.UserParticipations.Any(up => up.UserId == userId && up.PostId == Model.PostId);
            }

            @if (isParticipating)
            {
                <button class="btn-participated" disabled>
                    <i class="bi bi-check2-circle"></i> Sunt înscris
                </button>
            }
            else
            {
                <form asp-action="Participate" asp-controller="Posts" method="post">
                    <input type="hidden" name="postId" value="@Model.PostId" />
                    <button type="submit" class="btn-participate">
                        <i class="bi bi-plus-circle"></i> Participă
                    </button>
                </form>
            }
        </div>
    }

    <div class="comment-form">
        <form method="post" action="/Posts/Show/@Model.PostId">
            <input type="hidden" name="PostId" value="@Model.PostId" />
            <textarea class="comment-input"
                      name="CommentContent"
                      placeholder="Spune-ne părerea ta despre această postare..."
                      rows="3"></textarea>
            @Html.ValidationMessage("CommentContent", "", new { @class = "text-danger" })
            <button class="btn-comment" type="submit">
                <i class="bi bi-send"></i> Adaugă comentariu
            </button>
        </form>
    </div>
</div>
