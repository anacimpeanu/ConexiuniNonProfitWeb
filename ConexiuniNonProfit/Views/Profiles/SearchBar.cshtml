<style>
    .search-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
    }

    .search-title {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 1.8rem;
        background: linear-gradient(45deg, #2b5876, #4e4376);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .search-form {
        position: relative;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        backdrop-filter: blur(10px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

    .search-input {
        width: 100%;
        padding: 15px 60px 15px 30px;
        border: none;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.95);
        font-size: 1.1rem;
        color: #333;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        box-shadow: 0 0 20px rgba(74, 144, 226, 0.3);
        transform: translateY(-2px);
    }

    .search-button {
        position: absolute;
        right: 5px;
        top: 50%;
        transform: translateY(-50%);
        background: linear-gradient(45deg, #2b5876, #4e4376);
        border: none;
        border-radius: 15px;
        padding: 10px 20px;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .search-button:hover {
        background: linear-gradient(45deg, #4e4376, #2b5876);
        transform: translateY(-50%) scale(1.05);
    }

    /* Rezultate căutare */
    .result-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        margin: 20px auto;
        padding: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 20px;
        max-width: 500px;
        transform: translateY(20px);
        animation: slideUp 0.5s forwards;
    }

    .result-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .profile-image {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #fff;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .profile-info {
        flex: 1;
    }

    .profile-name {
        color: #333;
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0;
        transition: color 0.3s ease;
    }

    .profile-name:hover {
        color: #2b5876;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="search-container">
    <h3 class="search-title">Caută utilizatori</h3>
    
    <form method="GET" class="search-form">
        <input type="text" 
               class="search-input" 
               placeholder="Caută după nume sau username..." 
               name="search" 
               value="@ViewBag.SearchString"
               autocomplete="off">
        <button class="search-button" type="submit">
            <i class="bi bi-search"></i> Caută
        </button>
    </form>

    @if (ViewBag.cautare == true)
    {
        @foreach (var profil in ViewBag.profile)
        {
            <div class="result-card">
                @if (profil.ProfileImage != null)
                {
                    <img class="profile-image" src="data:image/jpeg;base64,@Convert.ToBase64String(profil.ProfileImage)" alt="Profile Picture" />
                }
                else
                {
                    <img class="profile-image" src="/images/default-avatar.png" alt="Default Profile Picture" />
                }
                <div class="profile-info">
                    <a href="/Profiles/Show/@profil.ProfileId" class="profile-name">
                        @profil.ProfileName
                    </a>
                </div>
            </div>
        }
    }
</div>