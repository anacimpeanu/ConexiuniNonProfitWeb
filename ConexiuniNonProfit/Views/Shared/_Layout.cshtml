<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conexiuni NonProfit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <style>
        .col-md-6 {
            display: none;
        }

        .navbar {
            background-color: #343a40; /* Darker background for better contrast */
        }

            .navbar .navbar-brand, .navbar .nav-link {
                color: #f8f9fa; /* Light color for better readability */
            }

                .navbar .navbar-brand:hover, .navbar .nav-link:hover {
                    color: #ffc107; /* Gold color for hover effect */
                }

        .footer {
            background-color: #343a40;
            color: white;
        }

            .footer a {
                color: #ffc107;
            }

                .footer a:hover {
                    color: white;
                }

        #login-submit {
            background-color: #ffc107;
            border: none;
            color: #343a40;
        }

        a {
            color: #343a40;
        }

        h2 {
            display: none;
        }

        body {
            color: black; /* Adjust text color for visibility */
        }

        .custom-container {
            padding: 20px;
            border-radius: 10px;
            position: relative; /* Ensure the container is positioned relative to the body */
            z-index: 2; /* Make sure the container is above the video */
        }

        .navbar-nav {
            flex-direction: row;
        }

            .navbar-nav .nav-item {
                padding-left: 20px;
            }

        /* Video background */
        #background-video {
            position: fixed;
            right: 0;
            bottom: 0;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -1;
            background-size: cover;
        }
    </style>
</head>
<body>
    <!-- Video Background -->
    <video autoplay muted loop id="background-video">
        <source src="~/images/JoinUs.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ConexiuniNonProfit</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index">
                                <i class="bi bi-card-text"></i> Afisare postari
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Profiles" asp-action="Index">
                                <i class="bi bi-people"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">
                                <i class="bi bi-tags"></i> Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Actiuni" asp-action="Index">
                                <i class="bi bi-lightning"></i> Actiuni
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Profiles" asp-action="SearchBar">
                                <i class="bi bi-search"></i> Cauta profil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="SearchPosts">
                                <i class="bi bi-search"></i> Cauta postare
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 custom-container">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
